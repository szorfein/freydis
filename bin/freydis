#!/usr/bin/env ruby
require "freydis"

puts "Freydis v." + Freydis::VERSION

cli = Freydis::Options.new(ARGV)
data = Freydis::Data.new
data.load

if cli.init
  Freydis::Init.run(data.options)
  puts data.options[:disk]
  exit 0
end

if !cli.backup && !cli.restore
  puts "Ok... glad to see you too."
  exit 1
end

if cli.backup
  puts "Saving..."
elsif cli.restore
  puts "Restore..."
end
